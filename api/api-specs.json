  "host": "localhost:8080",
  "basePath": "/",
  "tags": [
    {
      "name": "tomato-sale-controller",
      "description": "Endpoint for tomato sales management"
    }
  ],
  "paths": {
    "/sales/data": {
      "get": {
        "tags": [
          "tomato-sale-controller"
        ],
        "summary": "Returns list of generated tomato sales",
        "operationId": "generateTomatoSalesUsingGET",
        "produces": [
          "*/*"
        ],
        "parameters": [
          {
            "name": "size",
            "in": "query",
            "description": "Size of the resulting list of tomato sales",
            "required": false,
            "type": "integer",
            "default": 3,
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful retrieval of tomato sales",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/TomatoSale"
              }
            }
          },
          "400": {
            "description": "Requested size of result is <= 0"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  },
  "definitions": {
    "TomatoSale": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "provider": {
          "type": "string",
          "enum": [
            "Heinz",
            "Hunt's",
            "Del Monte",
            "Le Ol' Granma"
          ]
        },
        "timestamp": {
          "type": "integer",
          "format": "int64"
        },
        "tomatoes": {
          "type": "integer",
          "format": "int32"
        }
      },
      "title": "TomatoSale"
    }
  }
}